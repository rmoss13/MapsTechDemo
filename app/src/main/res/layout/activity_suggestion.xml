<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_suggestion"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.cornez.studentdiscountsapp.SuggestionActivity">


    <LinearLayout
        android:id="@+id/businessLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/suggestion_intro"
        android:layout_alignParentStart="true">
        <TextView
            android:text="@string/place_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/businessTextView"
            android:textSize="20sp" />
        <EditText
            android:hint="Enter Name of Business"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/businessEdit"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/businessLayout"
        android:id="@+id/addressLayout">

        <TextView
            android:text="@string/address_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/addressTextView"
            android:textSize="20sp" />

        <EditText
            android:hint="Enter Street Address of Business"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/addressEdit"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/cityLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addressLayout"
        android:layout_alignParentStart="true">
        <TextView
            android:text="@string/city_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cityTextView"
            android:textSize="20sp" />
        <EditText
            android:hint="Enter City"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/cityEdit"/>

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:id="@+id/spinner"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cityLayout"
        android:id="@+id/discountLayout">
        <TextView
            android:text="@string/discount_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/discountTextView"
            android:textSize="20sp" />

        <EditText
            android:hint="Enter discount or special"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/discountEdit"/>
    </LinearLayout>

    <Button
        android:text="Submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cityLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="82dp"
        android:id="@+id/submit_button" />

    <TextView
        android:text="This will take you back to the maps scrren."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/submit_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        android:id="@+id/textView3"
        android:textSize="16sp" />


    <TextView
        android:text="@string/suggestion_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/suggestion_intro"
        android:textSize="20sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
